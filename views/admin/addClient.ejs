<%- include('../layouts/header.ejs') %>
<!-- BEGIN #app -->
<div id="app" class="app">
  <!-- BEGIN #header -->
  <%- include('../layouts/navbar.ejs') %>
  <!-- END #header -->

  <!-- BEGIN #sidebar -->
  <%- include('../layouts/sidebar.ejs') %>
  <!-- END #sidebar -->

  <!-- BEGIN mobile-sidebar-backdrop -->
  <button
    class="app-sidebar-mobile-backdrop"
    data-toggle-target=".app"
    data-toggle-class="app-sidebar-mobile-toggled"
  ></button>
  <!-- END mobile-sidebar-backdrop -->

  <!-- BEGIN #content -->
  <div id="content" class="app-content">
    <div class="d-flex align-items-center mb-3">
      <div>
        <ul class="breadcrumb">
          <li class="breadcrumb-item"><a href="#">Pages</a></li>
          <li class="breadcrumb-item active">Clients</li>
        </ul>
        <h1 class="page-header mb-0">Clients</h1>
      </div>

      <div class="ms-auto">
        <a href="/showClients" class="btn btn-theme fs-13px fw-semibold"
          >Show Client</a
        >
      </div>
    </div>

    <div class="row gx-4">
      <div class="col-xl-12">
        <div class="card mb-4">
          <div class="card-body">
            <% if (typeof message !== 'undefined' && (success !== 'undefined' &&
            success == true)) { %>
            <div class="alert alert-success" role="alert"><%= message %></div>
            <% } else if (typeof message !== 'undefined' && (success !==
            'undefined' && success == false)) { %>
            <div class="alert alert-danger" role="alert"><%= message %></div>
            <% } %>

            <div class="response-message"></div>

            <form action="/addClient" method="post" id="trackOrderForm">
              <div
                style="
                  display: flex;
                  justify-content: space-between;
                  align-items: center;
                "
              >
                <div
                  class="mb-2 mt-3 col-5"
                  style="margin-left: 20px; margin-right: 20px"
                >
                  <label for="">Client Name</label> <br /><br />
                  <input
                    type="text"
                    name="name"
                    placeholder="client name"
                    class="form-control"
                    required
                  />
                </div>
                <div class="mb-2 mt-3 col-5" style="margin-right: 40px">
                  <label for="">Email</label> <br />
                  <input
                    type="email"
                    name="email"
                    placeholder="Client Email"
                    class="form-control"
                    required
                  />
                </div>
              </div>

              

              <div
                style="
                  display: flex;
                  justify-content: space-between;
                  align-items: center;
                "
              >
                <div
                  class="mb-2 mt-3 col-5"
                  style="margin-left: 20px; margin-right: 20px"
                >
                  <label for="">Client Number</label> 
                  <input
                    type="number"
                    name="number"
                    placeholder="client number"
                    class="form-control"
                    required
                  />
                </div>
                <div class="mb-2 mt-3 col-5" style="margin-right: 40px">
                  <label for="">Business Name</label> <br />
                  <input
                    type="text"
                    name="business_name"
                    placeholder="Client Business Name"
                    class="form-control"
                    required
                  />
                </div>
              </div>

              <div
                style="
                  display: flex;
                  justify-content: space-between;
                  align-items: center;
                "
              >
                <div
                  class="mb-2 mt-3 col-5"
                  style="margin-left: 20px; margin-right: 20px"
                >
                  <label for="">Client Agent</label> 
                    <select name="client_agent" class="form-select" id="" required>
                        <option value="">Select the Client Agent</option>
                         
                        <option value="Afaq Ahmed">Afaq Ahmed </option>
                        <option value="Ari Akash">Ari Akash</option>
                        <option value="Bilal Tariq">Bilal TAriq</option>
                        <option value="Muhammad Hadi">Muhammad Hadi</option>
                        <option value="Muhammad Musa">Muhammad Mosa</option>
                        </select>
                </div>
                <div class="mb-2 mt-3 col-5" style="margin-right: 40px">
                  <label for="">Package</label> <br />
                   <select name="plan" class="form-select" id="" required>
                        <option value="">Select the Client Package</option>
                          
                        
                    <% plans.forEach(function(plan) { %>
                        <option value="<%= plan._id %>"><%= plan.planName  %></option>
                    
                    <% }); %>

                        
                        </select>
                </div>
              </div>

              <div class="mb-2 mt-2" style="float: inline-end; margin-right: 30px;">
                <button type="submit" class="btn btn-theme">Add Client</button>
              </div>
            </form>
          </div>
        </div>
      </div>
    </div>
  </div>
  <!-- END #content -->

